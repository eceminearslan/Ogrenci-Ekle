@model vize.Models.Bolum

@{
    ViewData["Title"] = "Bölüm Ekle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="BolumEkle" method="post">
    <div class="form-group">
        <label asp-for="BolumAd">Bölüm Adı:</label>
        <input asp-for="BolumAd" class="form-control" />
        <span asp-validation-for="BolumAd" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>